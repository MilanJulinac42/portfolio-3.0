---
import Icon from "./Icon.astro";
---

<section class="box skills">
  <h2 class="heading">Tech Stack</h2>
  <div class="skills-container">
    <div class="box skill">
      <Icon icon="html5" color="var(--accent-regular)" size="3.5rem" gradient />
      <span class="skill-heading">HTML5</span>
    </div>
    <div class="box skill">
      <Icon icon="css3" color="var(--accent-regular)" size="3.5rem" gradient />
      <span class="skill-heading">CSS3</span>
    </div>
    <div class="box skill">
      <Icon
        icon="javascript"
        color="var(--accent-regular)"
        size="3.5rem"
        gradient
      />
      <span class="skill-heading">JavaScript</span>
    </div>
    <div class="box skill">
      <Icon
        icon="typescript"
        color="var(--accent-regular)"
        size="3.5rem"
        gradient
      />
      <span class="skill-heading">TypeScript</span>
    </div>
    <div class="box skill">
      <Icon icon="react" color="var(--accent-regular)" size="3.5rem" gradient />
      <span class="skill-heading">React</span>
    </div>
    <div class="box skill">
      <Icon
        icon="nextjs"
        color="var(--accent-regular)"
        size="3.5rem"
        gradient
      />
      <span class="skill-heading">Next.js</span>
    </div>
    <div class="box skill">
      <Icon
        icon="svelte"
        color="var(--accent-regular)"
        size="3.5rem"
        gradient
      />
      <span class="skill-heading">Svelte</span>
    </div>
    <div class="box skill">
      <Icon
        icon="tailwind"
        color="var(--accent-regular)"
        size="3.5rem"
        gradient
      />
      <span class="skill-heading">Tailwind</span>
    </div>
    <div class="box skill">
      <Icon
        icon="nodejs"
        color="var(--accent-regular)"
        size="3.5rem"
        gradient
      />
      <span class="skill-heading">Node.js</span>
    </div>
    <div class="box skill">
      <Icon
        icon="nestjs"
        color="var(--accent-regular)"
        size="3.5rem"
        gradient
      />
      <span class="skill-heading">Nest.js</span>
    </div>
    <div class="box skill">
      <Icon
        icon="expressjs"
        color="var(--accent-regular)"
        size="3.5rem"
        gradient
      />
      <span class="skill-heading">Express</span>
    </div>
    <div class="box skill">
      <Icon
        icon="graphql"
        color="var(--accent-regular)"
        size="3.5rem"
        gradient
      />
      <span class="skill-heading">GraphQL</span>
    </div>
    <div class="box skill">
      <Icon
        icon="mongodb"
        color="var(--accent-regular)"
        size="3.5rem"
        gradient
      />
      <span class="skill-heading">MongoDB</span>
    </div>
    <div class="box skill">
      <Icon
        icon="postgresql"
        color="var(--accent-regular)"
        size="3.5rem"
        gradient
      />
      <span class="skill-heading">PostgreSQL</span>
    </div>
    <div class="box skill">
      <Icon
        icon="typeorm"
        color="var(--accent-regular)"
        size="3.5rem"
        gradient
      />
      <span class="skill-heading">TypeORM</span>
    </div>
    <div class="box skill">
      <Icon icon="gcp" color="var(--accent-regular)" size="3.5rem" gradient />
      <span class="skill-heading">GCP</span>
    </div>
    <div class="box skill">
      <Icon icon="aws" color="var(--accent-regular)" size="3.5rem" gradient />
      <span class="skill-heading">AWS</span>
    </div>
    <div class="box skill">
      <Icon
        icon="docker"
        color="var(--accent-regular)"
        size="3.5rem"
        gradient
      />
      <span class="skill-heading">Docker</span>
    </div>
    <div class="box skill">
      <Icon icon="git" color="var(--accent-regular)" size="3.5rem" gradient />
      <span class="skill-heading">Git</span>
    </div>
    <div class="box skill">
      <Icon
        icon="action"
        color="var(--accent-regular)"
        size="3.5rem"
        gradient
      />
      <span class="skill-heading">GitHub Actions</span>
    </div>
    <div class="box skill">
      <Icon icon="cicd" color="var(--accent-regular)" size="3.5rem" gradient />
      <span class="skill-heading">CI/CD</span>
    </div>
    <div class="box skill">
      <Icon icon="linux" color="var(--accent-regular)" size="3.5rem" gradient />
      <span class="skill-heading">Linux</span>
    </div>
    <div class="box skill">
      <Icon
        icon="kubernetes"
        color="var(--accent-regular)"
        size="3.5rem"
        gradient
      />
      <span class="skill-heading">Kubernetes</span>
    </div>
  </div>
</section>

<style>
  .box {
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    padding: 1.5rem;
    background-color: var(--gray-999_40);
    box-shadow: var(--shadow-sm);
  }

  .skills {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    width: 100%;
  }

  .skills-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 10px;
    flex-wrap: wrap;
  }

  .skill {
    width: 30%;
    display: flex;
    text-align: center;
    gap: 15px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    align-self: stretch;
  }

  .skill-heading {
    font-size: 14px;
  }

  .heading {
    text-align: center;
  }

  @media (min-width: 720px) {
    .skill-heading {
      font-size: 22px;
    }

    .skill {
      width: 20%;
    }
  }
</style>
